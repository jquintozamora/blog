#page-header
  span.pull-left 
    //- a#site-name(href="/") #[='Blog']
    a.brand(href="/")
      img.brand-image(src="/jose-quinto.png")
      div.brand-name="Jos√© Quinto"
  if(theme.social)
    i.fa.fa-share.toggle-social(aria-hidden="true")
    #header-social-icons.socialicons
      each url, icon in theme.social
        a.social-icon(href=url target="_blank" rel="noopener")
          i.fa(class="fa-" + icon)
    if (theme.algolia_search.enable || theme.local_search && theme.local_search.enable)
      a.social-icon.search
        i.fa.fa-search
      include ./search/index.pug
  i.fa.fa-bars.toggle-menu.pull-right(aria-hidden="true")
  span.pull-right.menus
    each url, label in theme.menu
      a.site-page(href=url)= label
